{% extends "base.njk" %}

{% block content %}
<div class="login-container">
  <h1>Login</h1>
  
  {% if error %}
  <div class="error-message">{{ error }}</div>
  {% endif %}
  
  {% if user %}
  <p>You are already logged in as <strong>{{ user.email }}</strong></p>
  <a href="/auth/logout" class="btn btn-secondary">Logout</a>
  {% else %}
  <p>Sign in with your Hack Club account to continue.</p>
  <a href="/auth/login" class="btn btn-primary">
    Login with Hack Club
  </a>
  <p class="login-note">You must sign in to see individual meta posts so that they don't leak to the public. Statistics can be seen without signing in.</p>
  {% endif %}
</div>
{% endblock %}
